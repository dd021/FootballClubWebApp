@page
@model FootballClubWebApp.Pages.Rankings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading">All Rankings</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Ranking</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Year
            </th>
            <th>
                Team Name
            </th>
            <th>
                Value in Millions
            </th>
            <th>
                Income in Milions
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ranking)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YearInfo.YearName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamInfo.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueInMillions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatingIncome)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary mr-2" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
