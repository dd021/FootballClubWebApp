@page
@model FootballClubWebApp.Pages.Rankings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center heading">Edit Ranking Details</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ranking.Id" />
            <div class="form-group">
                <label asp-for="Ranking.TeamID" class="control-label"></label>
                <select asp-for="Ranking.TeamID" class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.YearID" class="control-label"></label>
                <select asp-for="Ranking.YearID" class="form-control" asp-items="ViewBag.YearId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.ValueInMillions" class="control-label"></label>
                <input asp-for="Ranking.ValueInMillions" class="form-control" />
                <span asp-validation-for="Ranking.ValueInMillions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking.OperatingIncome" class="control-label"></label>
                <input asp-for="Ranking.OperatingIncome" class="form-control" />
                <span asp-validation-for="Ranking.OperatingIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Ranking Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
