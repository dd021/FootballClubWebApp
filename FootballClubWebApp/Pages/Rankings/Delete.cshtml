@page
@model FootballClubWebApp.Pages.Rankings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center heading">Delete Ranking Details</h1>
<div>
    <h4>Are you sure to remove Ranking Details?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ranking.ValueInMillions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ranking.ValueInMillions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ranking.OperatingIncome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ranking.OperatingIncome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ranking.TeamInfo.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ranking.TeamInfo.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ranking.YearInfo.YearName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ranking.YearInfo.YearName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Ranking.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
